<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="esprit.tn.souha_pi.controllers.HistoryController"
           styleClass="page-bg">

    <VBox spacing="18" alignment="CENTER" maxWidth="1000">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- En-tÃªte avec infos utilisateur -->
        <HBox alignment="CENTER_LEFT" spacing="15" maxWidth="900">
            <Label text="ðŸ“Š" style="-fx-font-size: 40px;"/>
            <VBox>
                <Label text="Transaction History" styleClass="page-header"/>
                <Label fx:id="userInfoLabel" text="Chargement..." style="-fx-text-fill: #64748b;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="totalLabel" text="Total: 0.00 TND"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
        </HBox>

        <Separator/>

        <!-- Filtres -->
        <HBox spacing="15" alignment="CENTER_LEFT" maxWidth="900">
            <Label text="Filtrer par:" style="-fx-font-weight: bold;"/>
            <ComboBox fx:id="typeFilter" promptText="Type" prefWidth="120" styleClass="input"/>
            <ComboBox fx:id="periodFilter" promptText="PÃ©riode" prefWidth="120" styleClass="input"/>
            <Button text="Appliquer" styleClass="primary-btn" onAction="#appliquerFiltres"/>
            <Button text="RÃ©initialiser" styleClass="secondary-btn" onAction="#reinitialiserFiltres"/>
        </HBox>

        <!-- Statistiques rapides -->
        <HBox spacing="20" alignment="CENTER" maxWidth="900">
            <VBox styleClass="stat-card-mini">
                <Label text="CrÃ©dits (+)" style="-fx-text-fill: #22c55e;"/>
                <Label fx:id="totalCreditsLabel" text="0.00 TND" style="-fx-font-weight: bold;"/>
            </VBox>
            <VBox styleClass="stat-card-mini">
                <Label text="DÃ©bits (-)" style="-fx-text-fill: #ef4444;"/>
                <Label fx:id="totalDebitsLabel" text="0.00 TND" style="-fx-font-weight: bold;"/>
            </VBox>
            <VBox styleClass="stat-card-mini">
                <Label text="Nombre" style="-fx-text-fill: #3b82f6;"/>
                <Label fx:id="countLabel" text="0" style="-fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- Tableau des transactions -->
        <VBox styleClass="card" maxWidth="900">
            <TableView fx:id="table" styleClass="modern-table" prefHeight="400">
                <columns>
                    <TableColumn text="Date" fx:id="colDate" prefWidth="150"/>
                    <TableColumn text="Type" fx:id="colType" prefWidth="100"/>
                    <TableColumn text="Montant" fx:id="colAmount" prefWidth="120"/>
                    <TableColumn text="Avec" fx:id="colWith" prefWidth="150"/>
                    <TableColumn text="Description" fx:id="colDescription" prefWidth="250"/>
                    <TableColumn text="Statut" fx:id="colStatus" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Message si pas d'historique -->
        <VBox fx:id="noHistoryBox" spacing="15" alignment="CENTER" visible="false" managed="false">
            <Label text="ðŸ“­" style="-fx-font-size: 60px;"/>
            <Label fx:id="noHistoryLabel" text="" style="-fx-font-size: 16px; -fx-text-fill: #64748b;"/>
        </VBox>

    </VBox>

</StackPane>