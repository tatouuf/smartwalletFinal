<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.shape.Circle?>
<BorderPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #08010e, #ffffff);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.mainalc.MainALC">

    <!-- Logo et introduction -->
    <top>
        <VBox alignment="CENTER" prefHeight="357.0" prefWidth="612.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <!-- Logo circulaire centré -->
            <ImageView fx:id="imgLogo" fitHeight="180.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                <!-- Clip pour rendre l'image ronde -->
                <clip>
                    <Circle radius="90" centerX="90" centerY="90"/>
                </clip>
            </ImageView>

            <!-- Introduction / description -->
            <Label prefHeight="33.0" prefWidth="354.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: black;" text="Welcome to SmartWallet" />
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: black;" text="Services Department" />
            <Label maxWidth="534.0" prefHeight="30.0" prefWidth="534.0" style="-fx-font-size: 14px; -fx-text-fill: #555555; -fx-wrap-text: true;" text="Manage your Rentals, Insurance, and Credit easily from our SmartWallet platform." />
        </VBox>

    </top>

    <!-- Contenu principal avec les trois icônes -->
    <center>
        <HBox alignment="CENTER" prefHeight="194.0" prefWidth="612.0" spacing="60">
            <padding>
                <Insets bottom="50.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <children>
             <VBox prefHeight="150.0" prefWidth="200.0" spacing="20" alignment="CENTER">
                 <children>
                     <!-- Bouton utilisateur -->
                     <Button fx:id="buttonuserser" mnemonicParsing="false" onAction="#userseract"
                             text="Join As User"
                             style="-fx-background-color: linear-gradient(to bottom right, #000000, #2c0051);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 15;
                       -fx-padding: 10 20 10 20;" />

                     <!-- Bouton administrateur -->
                     <Button fx:id="buttonadminser" mnemonicParsing="false" onAction="#buttonadminser"
                             text="Join As Admin"
                             style="-fx-background-color: linear-gradient(to bottom right, #000000, #2c0051);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 15;
                       -fx-padding: 10 20 10 20;" />
                 </children>
             </VBox>

         </children>

        </HBox>
    </center>

</BorderPane>
