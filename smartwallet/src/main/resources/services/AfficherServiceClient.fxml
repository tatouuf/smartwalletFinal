<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #cfc0dc, #e4ecf7);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.service.AfficherServiceClient">

    <children>

        <!-- ================= TOP HEADER: TITLE CENTER + LOGO RIGHT ================= -->

        <HBox layoutX="14.0" layoutY="14.0" prefWidth="860" spacing="10" style="-fx-padding: 10; -fx-alignment: center-left;">

            <children>
                <!-- Logo à l'extrémité droite -->
                <ImageView fx:id="imgLogoList" fitHeight="80" fitWidth="80" preserveRatio="true" />

                <!-- Empty region to push the title to center -->
                <Region fx:id="spacerLeft" prefHeight="80.0" prefWidth="58.0" HBox.hgrow="ALWAYS" />

                <!-- Title centered -->
                <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #19052b;" text="Cars and houses available for rent" HBox.hgrow="NEVER" />

                <!-- Empty region to balance spacing -->
                <Region fx:id="spacerRight" HBox.hgrow="ALWAYS" />
                <Button fx:id="retouritafser" layoutX="600.0" layoutY="400.0" onAction="#retourMain" prefHeight="28.0" prefWidth="132.0" style="-fx-background-color: rgba(14,0,36,0.65); -fx-text-fill: white; -fx-font-weight: bold;" text="Return" />

            </children>

        </HBox>

        <!-- ================= SCROLLPANE POUR LES CARDS ================= -->

        <ScrollPane hbarPolicy="AS_NEEDED" layoutX="23.0" layoutY="103.0" prefHeight="366.0" prefWidth="842.0" style="-fx-background-color: transparent;" vbarPolicy="NEVER">

            <content>

                <HBox fx:id="cardaffserv" alignment="CENTER_LEFT" prefHeight="363.0" prefWidth="842.0" spacing="20" style="-fx-padding: 10;">
                    <!-- Les VBoxes seront ajoutées dynamiquement par le code Java -->
                </HBox>

            </content>

        </ScrollPane>

    </children>
</AnchorPane>
