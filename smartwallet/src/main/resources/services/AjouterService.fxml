<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.service.AjouterService"
            prefHeight="600.0" prefWidth="900.0">

   <children>
      <!-- Logo -->
      <ImageView fx:id="imgLogoService" layoutX="20.0" layoutY="20.0" fitWidth="150.0" fitHeight="150.0" />

      <!-- Carte - occupe la moitié droite -->
      <WebView fx:id="localisationservice" layoutX="400.0" layoutY="20.0" prefWidth="450.0" prefHeight="350.0" />

      <!-- Champ coordonnées -->
      <TextField fx:id="coordTextField" layoutX="400.0" layoutY="380.0" prefWidth="450.0"
                 promptText="Coordonnées" editable="false" />

      <!-- Formulaire de gauche -->
      <Label text="Prix:" layoutX="20.0" layoutY="190.0" />
      <TextField fx:id="prixservice" layoutX="20.0" layoutY="210.0" prefWidth="200.0" />

      <Label text="Type:" layoutX="20.0" layoutY="250.0" />
      <TextField fx:id="typeservice" layoutX="20.0" layoutY="270.0" prefWidth="200.0" />

      <Label text="Type de service:" layoutX="20.0" layoutY="310.0" />
      <ComboBox fx:id="typeserviceservice" layoutX="20.0" layoutY="330.0" prefWidth="200.0" />

      <Label text="Statut:" layoutX="20.0" layoutY="370.0" />
      <ComboBox fx:id="statutservice" layoutX="20.0" layoutY="390.0" prefWidth="200.0" />

      <Label text="Description:" layoutX="20.0" layoutY="430.0" />
      <TextField fx:id="descriptionservice" layoutX="20.0" layoutY="450.0" prefWidth="350.0" />

      <Label text="Image:" layoutX="20.0" layoutY="490.0" />
      <TextField fx:id="imagajt" layoutX="20.0" layoutY="510.0" prefWidth="280.0" />
      <Button text="Parcourir" layoutX="310.0" layoutY="510.0" onAction="#choisirImage" />

      <!-- Boutons -->
      <Button fx:id="btnAjouterserrr" text="Ajouter" layoutX="400.0" layoutY="450.0" prefWidth="100.0" onAction="#onButtonClicked" />
      <Button text="Retour" layoutX="520.0" layoutY="450.0" prefWidth="100.0" onAction="#retourMain" />
      <Button text="Réinitialiser" layoutX="640.0" layoutY="450.0" prefWidth="100.0" />
   </children>
</AnchorPane>