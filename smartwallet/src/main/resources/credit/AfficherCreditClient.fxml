<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom right, #a7bbdc, #c3cfe2);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.credit.AfficherCreditClient">

    <!-- Bouton retour -->
    <Button fx:id="btnRetourcredit" layoutX="751.0" layoutY="29.0"
            onAction="#retourMain" prefHeight="26.0" prefWidth="119.0"
            style="-fx-background-color: rgba(14,0,36,0.65); -fx-text-fill: white; -fx-font-weight: bold;"
            text="Return" />

    <!-- Logo -->
    <ImageView fx:id="imgLogoCredit" fitHeight="79.0" fitWidth="109.0" layoutX="3.0" layoutY="2.0" preserveRatio="true" />

    <!-- Titre -->
    <Label alignment="CENTER" layoutX="280.0" layoutY="40.0" prefWidth="400.0"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0e0024;"
           text="Credit List" />

    <!-- TableView pour les crédits -->
    <TableView fx:id="tableCredits" layoutX="29.0" layoutY="86.0" prefWidth="842.0" prefHeight="370.0">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNomClient" text="Client" prefWidth="150"/>
            <TableColumn fx:id="colMontant" text="Montant" prefWidth="100"/>
            <TableColumn fx:id="colDateCredit" text="Date" prefWidth="120"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
            <TableColumn fx:id="colStatut" text="Statut" prefWidth="100"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Ajouter un crédit -->
    <Button fx:id="itafa" layoutX="785.0" layoutY="460.0" mnemonicParsing="false"
            onAction="#itafaaction" prefHeight="26.0" prefWidth="87.0" text="Add Credit" />

</AnchorPane>
