<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #cfc0dc, #c3cfe2);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.credit.ModifierCredit">

    <children>

        <!-- ================= LEFT FORM ================= -->

        <Text layoutX="40.0" layoutY="50.0" text="Client Name" />
        <TextField fx:id="txtNomClient" layoutX="150.0" layoutY="30.0" prefWidth="220" />

        <Text layoutX="40.0" layoutY="95.0" text="Amount" />
        <TextField fx:id="txtMontant" layoutX="150.0" layoutY="75.0" prefWidth="220" />

        <Text layoutX="40.0" layoutY="140.0" text="Credit Date" />
        <DatePicker fx:id="dateCredit" layoutX="150.0" layoutY="120.0" prefWidth="220" />

        <Text layoutX="40.0" layoutY="185.0" text="Description" />
        <TextField fx:id="txtDescription" layoutX="150.0" layoutY="165.0" prefWidth="220" />

        <Text layoutX="40.0" layoutY="230.0" text="Status" />
        <ComboBox fx:id="comboStatut" layoutX="150.0" layoutY="210.0" prefWidth="220" />

        <Button fx:id="btnEnregistrer" layoutX="150.0" layoutY="280.0" onAction="#enregistrerModifications" prefWidth="220" style="-fx-background-color: #08010e;                        -fx-text-fill: white;                        -fx-font-weight: bold;" text="Save Changes" />

        <!-- Vertical Black Bar -->

        <Rectangle arcHeight="20" arcWidth="20" fill="#000000" height="380.0" layoutX="520.0" layoutY="70.0" width="8.0" />

        <!-- ================= RIGHT SIDE LOGO ================= -->

        <ImageView fx:id="imgLogoCredit" fitHeight="300.0" fitWidth="300.0" layoutX="560.0" layoutY="90.0" preserveRatio="true" />

        <Button fx:id="cancel" layoutX="619.0" layoutY="375.0" onAction="#retourMain" prefHeight="30" prefWidth="220" style="-fx-background-color: rgba(14,0,36,0.65); -fx-text-fill: white; -fx-font-weight: bold;" text="Retour" />
        <!-- TITLE UNDER LOGO -->

        <Label alignment="CENTER" layoutX="531.0" layoutY="324.0" prefWidth="380.0" style="-fx-font-size: 22px;                       -fx-font-weight: bold;                       -fx-text-fill: #08010e;" text="Modify Credit" />

    </children>
</AnchorPane>
