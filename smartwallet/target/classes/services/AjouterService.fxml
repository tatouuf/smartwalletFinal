<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #a7bbdc, #c3cfe2);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.service.AjouterService">

   <children>

      <!-- ================= LEFT FORM ================= -->

      <Text layoutX="40.0" layoutY="50.0" text="Price" />
      <TextField fx:id="prixservice" layoutX="150.0" layoutY="30.0" prefWidth="220" />

      <Text layoutX="40.0" layoutY="95.0" text="Service Category" />
      <ComboBox fx:id="typeserviceservice" layoutX="150.0" layoutY="75.0" prefWidth="220.0" />

      <Text layoutX="40.0" layoutY="140.0" text="Service Type" />
      <TextField fx:id="typeservice" layoutX="150.0" layoutY="120.0" prefWidth="220" />

      <Text layoutX="40.0" layoutY="185.0" text="Status" />
      <ComboBox fx:id="statutservice" layoutX="150.0" layoutY="165.0" prefWidth="220.0" />

      <Text layoutX="40.0" layoutY="230.0" text="Location" />
      <TextField fx:id="localisationservice" layoutX="150.0" layoutY="210.0" prefWidth="220" />

      <Text layoutX="40.0" layoutY="275.0" text="Address" />
      <TextField fx:id="adresseservice" layoutX="150.0" layoutY="255.0" prefWidth="220" />

      <Text layoutX="40.0" layoutY="320.0" text="Description" />
      <TextField fx:id="descriptionservice" layoutX="150.0" layoutY="300.0" prefWidth="220" />

      <Text layoutX="40.0" layoutY="365.0" text="Image" />
      <TextField fx:id="imagajt" layoutX="150.0" layoutY="345.0" prefWidth="220" />

      <Button fx:id="btnParcourirImage" layoutX="380.0" layoutY="345.0" onAction="#choisirImage" text="Browse" />

      <Button fx:id="buttonajoutservice" layoutX="150.0" layoutY="410.0" onAction="#onButtonClicked" prefWidth="220" style="-fx-background-color: #c388b5; -fx-text-fill: white; -fx-font-weight: bold;" text="Add Service" />

      <!-- Vertical Pink Bar -->

      <Rectangle
              layoutX="520.0"
              layoutY="70.0"
              width="8.0"
              height="380.0"
              arcWidth="20"
              arcHeight="20"
              fill="#2c0051"/>

      <!-- ================= RIGHT SIDE LOGO ================= -->

      <ImageView fx:id="imgLogoService" fitHeight="300.0" fitWidth="300.0" layoutX="560.0" layoutY="90.0" preserveRatio="true" />

      <!-- TITLE UNDER LOGO -->

      <Label alignment="CENTER" layoutX="531.0" layoutY="324.0" prefWidth="380.0" style="-fx-font-size: 22px;                     -fx-font-weight: bold;                     -fx-text-fill: #0e0024;" text="Add a Car or Home Rental Service" />

   </children>
</AnchorPane>
