<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="500.0" prefWidth="900.0"
            style="-fx-background-color: linear-gradient(to bottom right, #cfc0dc, #e4ecf7);"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.service.AfficherService">

   <children>

      <!-- ================= HEADER ================= -->
      <HBox layoutX="14.0" layoutY="14.0" prefWidth="860.0" spacing="10.0"
            style="-fx-padding: 10; -fx-alignment: center-left;">

         <children>

            <!-- LOGO -->
            <ImageView fx:id="imgLogoList"
                       fitHeight="80.0"
                       fitWidth="80.0"
                       preserveRatio="true" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- TITLE -->
            <Label text="Cars and houses available for rent"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #19052b;" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- RETURN BUTTON -->
            <Button fx:id="retouritafser"
                    text="Return"
                    prefHeight="32.0"
                    prefWidth="140.0"
                    onAction="#retourMain"
                    style="-fx-background-color: rgba(14,0,36,0.65);
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-background-radius: 8;" />

         </children>
      </HBox>

      <!-- ================= SCROLL CARDS ================= -->
      <ScrollPane layoutX="23.0"
                  layoutY="103.0"
                  prefHeight="343.0"
                  prefWidth="842.0"
                  hbarPolicy="AS_NEEDED"
                  vbarPolicy="NEVER"
                  fitToHeight="true"
                  style="-fx-background: transparent; -fx-background-color: transparent;">

         <content>
            <!-- ⚠️ هنا تتحط الكروت ديناميكياً -->
            <HBox fx:id="cardaffserv"
                  alignment="CENTER_LEFT"
                  spacing="20"
                  style="-fx-padding: 15;" />
         </content>
      </ScrollPane>

      <!-- ================= ADD BUTTON ================= -->
      <Button fx:id="btnAjouterserrr"
              layoutX="740.0"
              layoutY="455.0"
              prefWidth="150.0"
              prefHeight="36.0"
              mnemonicParsing="false"
              text="Add Car / Home"
              onAction="#retourAjouter"
              style="-fx-background-color: rgba(61,35,103,0.75);
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 10;" />

   </children>
</AnchorPane>