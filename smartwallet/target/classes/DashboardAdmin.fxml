<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/DashboardAdmin.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.DashboardAdminController">

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• TOP BAR â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="top-bar">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15"/>
            </padding>

            <Label styleClass="dashboard-title" text="âš¡ Admin Dashboard"/>
            <Region HBox.hgrow="ALWAYS"/>

            <!-- STAT CARDS -->
            <VBox alignment="CENTER" spacing="4" styleClass="stat-card">
                <Label styleClass="card-title" text="ðŸ‘¥ Total Users"/>
                <Label fx:id="lblTotalUsers" styleClass="card-value" text="0"/>
            </VBox>

            <VBox alignment="CENTER" spacing="4" styleClass="stat-card">
                <Label styleClass="card-title" text="ðŸ’³ Transactions"/>
                <Label fx:id="lblTotalTransactions" styleClass="card-value" text="0"/>
            </VBox>

            <VBox alignment="CENTER" spacing="4" styleClass="stat-card">
                <Label styleClass="card-title" text="ðŸ’° Benefice"/>
                <Label fx:id="lblBenefice" styleClass="card-value" text="0.00 DT"/>
            </VBox>

            <!-- NEW: Notifications badge -->
            <VBox alignment="CENTER" spacing="4" styleClass="stat-card">
                <Label styleClass="card-title" text="ðŸ”” Notifications"/>
                <Label fx:id="lblNotificationCount" styleClass="card-value" text="0"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <!-- NAV BUTTONS -->
            <Button fx:id="btnManageUsers"
                    onAction="#handleManageUsers"
                    styleClass="btn-secondary"
                    text="ðŸ‘¤ Manage Users"/>

            <!-- NEW: Notifications button -->
            <Button fx:id="btnNotifications"
                    onAction="#handleNotifications"
                    styleClass="btn-secondary"
                    text="ðŸ”” Notifications"/>

            <Button fx:id="btnManageReclamations"
                    onAction="#handleManageReclamations"
                    styleClass="btn-secondary"
                    text="ðŸ“© Reclamations"/>

            <!-- LOGOUT -->
            <Button fx:id="btnLogout"
                    onAction="#logout"
                    styleClass="btn-danger"
                    text="ðŸšª Logout"/>
        </HBox>
    </top>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• CENTER: CHARTS â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <center>
        <GridPane hgap="20" vgap="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="300"/>
            </rowConstraints>

            <!-- PIE CHART -->
            <VBox spacing="5" styleClass="chart-box">
                <Label styleClass="section-title" text="Reclamations Status"/>
                <PieChart fx:id="pieReclamations"
                          legendVisible="true"
                          labelsVisible="true"
                          VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- LINE CHART -->
            <VBox spacing="5" styleClass="chart-box" GridPane.columnIndex="1">
                <Label styleClass="section-title" text="Users Growth"/>
                <LineChart fx:id="lineUsers" VBox.vgrow="ALWAYS">
                    <xAxis><CategoryAxis label="Month"/></xAxis>
                    <yAxis><NumberAxis label="Users"/></yAxis>
                </LineChart>
            </VBox>

        </GridPane>
    </center>

    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• BOTTOM: TABLES â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
    <bottom>
        <HBox spacing="20">
            <padding>
                <Insets bottom="15" left="20" right="20" top="10"/>
            </padding>

            <!-- USERS TABLE -->
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label styleClass="section-title" text="ðŸ‘¥ Users"/>
                <TableView fx:id="tableUsers" prefHeight="200" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUserId"  prefWidth="50"  text="ID"/>
                        <TableColumn fx:id="colNom"     prefWidth="120" text="Last Name"/>
                        <TableColumn fx:id="colPrenom"  prefWidth="120" text="First Name"/>
                        <TableColumn fx:id="colEmail"   prefWidth="220" text="Email"/>
                    </columns>
                    <placeholder><Label text="No users found."/></placeholder>
                </TableView>
            </VBox>

            <!-- TRANSACTIONS TABLE -->
            <VBox spacing="8" HBox.hgrow="ALWAYS">
                <Label styleClass="section-title" text="ðŸ’³ Transactions"/>
                <TableView fx:id="tableTransactions" prefHeight="200" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTransactionId" prefWidth="50"  text="ID"/>
                        <TableColumn fx:id="colAmount"        prefWidth="150" text="Amount"/>
                        <TableColumn fx:id="colDate"          prefWidth="160" text="Date"/>
                    </columns>
                    <placeholder><Label text="No transactions found."/></placeholder>
                </TableView>
            </VBox>

        </HBox>
    </bottom>

</BorderPane>