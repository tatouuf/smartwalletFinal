<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.souha_pi.controllers.TopUpController">

    <center>
        <VBox spacing="20" alignment="CENTER" styleClass="form-container">

            <padding>
                <Insets top="40"/>
            </padding>

            <Label text="Recharge Wallet" styleClass="page-title"/>

            <Label fx:id="cardLabel" style="-fx-font-size:16px;"/>

            <TextField fx:id="amountField" promptText="Amount to add"/>

            <HBox spacing="12">
                <Button text="Confirm" onAction="#confirm" styleClass="btn-primary"/>
                <Button text="Cancel" onAction="#cancel" styleClass="btn-outline"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
