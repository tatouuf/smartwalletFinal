<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="esprit.tn.souha_pi.controllers.DashboardController"
           styleClass="page-bg">

    <VBox alignment="TOP_CENTER" spacing="25" maxWidth="800">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Message de bienvenue -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="ðŸ‘‹" style="-fx-font-size: 36px;"/>
            <Label fx:id="welcomeLabel" text="Bienvenue" styleClass="page-header"/>
        </HBox>

        <!-- Balance Card -->
        <VBox styleClass="balance-card" alignment="CENTER" spacing="12" maxWidth="500">
            <Label text="Solde actuel" styleClass="balance-title"/>
            <Label fx:id="balanceLabel" text="0.00 TND" styleClass="balance-value"/>
        </VBox>

        <!-- Message pas de wallet -->
        <Label fx:id="noWalletLabel" text="" visible="false"
               style="-fx-text-fill: #f59e0b; -fx-font-size: 16px; -fx-font-weight: bold;"/>

        <!-- Bouton crÃ©er wallet -->
        <Button fx:id="createWalletButton" text="ðŸ’° CrÃ©er mon wallet"
                styleClass="primary-btn" onAction="#createWallet"
                visible="false" prefWidth="200" prefHeight="40"/>

        <!-- Section Cartes -->
        <VBox spacing="15" styleClass="card" maxWidth="600" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="ðŸ’³" style="-fx-font-size: 24px;"/>
                <Label text="Mes cartes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="addCardButton" text="+ Ajouter une carte"
                        styleClass="success-btn" onAction="#addCard"/>
            </HBox>

            <Separator/>

            <VBox fx:id="cardsContainer" spacing="10">
                <!-- Les cartes seront ajoutÃ©es dynamiquement -->
            </VBox>
        </VBox>

        <!-- Actions rapides -->
        <HBox spacing="15" alignment="CENTER">
            <Button text=" Envoyer" styleClass="primary-btn" onAction="#goSend" prefWidth="120"/>
            <Button text=" Recevoir" styleClass="primary-btn" onAction="#goReceive" prefWidth="120"/>
            <Button text=" Recharger" styleClass="primary-btn" onAction="#goHistory" prefWidth="120"/>
            <Button text=" Historique" styleClass="primary-btn" onAction="#goHistory" prefWidth="120"/>
        </HBox>

    </VBox>
</StackPane>