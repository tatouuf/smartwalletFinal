<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="esprit.tn.souha_pi.controllers.loan.LoanDetailsController">

    <content>
        <VBox spacing="18">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- ===== LOAN HEADER CARD ===== -->

            <VBox spacing="10"
                  style="-fx-background-color:white;
                         -fx-padding:18;
                         -fx-background-radius:14;
                         -fx-border-radius:14;
                         -fx-border-color:#e0e0e0;
                         -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,3);">

                <Label text="Loan Details"
                       style="-fx-font-size:22px; -fx-font-weight:bold;"/>

                <Label fx:id="lenderLabel"/>
                <Label fx:id="borrowerLabel"/>
                <Label fx:id="amountLabel"/>
                <Label fx:id="remainingLabel"/>

            </VBox>

            <!-- ===== PAYMENT FORM ===== -->

            <VBox spacing="10"
                  style="-fx-background-color:white;
                         -fx-padding:18;
                         -fx-background-radius:14;
                         -fx-border-radius:14;
                         -fx-border-color:#e0e0e0;
                         -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.08), 12,0,0,3);">

                <Label text="Make a Payment"
                       style="-fx-font-size:18px; -fx-font-weight:bold;"/>

                <HBox spacing="10">
                    <TextField fx:id="amountField" promptText="Payment amount"/>
                    <Button text="ðŸ’¸ Pay Loan" onAction="#payLoan"/>
                </HBox>

                <Label fx:id="statusLabel" style="-fx-text-fill:green;"/>

            </VBox>

            <!-- ===== PAYMENT HISTORY ===== -->

            <VBox spacing="10">

                <Label text="Payment History"
                       style="-fx-font-size:18px; -fx-font-weight:bold;"/>

                <!-- container cards -->
                <VBox fx:id="paymentsContainer" spacing="12"/>

            </VBox>

        </VBox>
    </content>

</ScrollPane>
