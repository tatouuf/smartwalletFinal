<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.WalletHomeController">

    <VBox spacing="30" alignment="TOP_CENTER"
          style="-fx-background-color:linear-gradient(to bottom,#0f172a,#020617);
                 -fx-padding:40;">

        <!-- TITLE -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="SMART WALLET"
                   style="-fx-text-fill:white; -fx-font-size:28px; -fx-font-weight:bold;"/>
            <Label text="GÃ©rez vos finances simplement"
                   style="-fx-text-fill:#94a3b8; -fx-font-size:14px;"/>
        </VBox>

        <!-- GRID MENU -->
        <GridPane hgap="25" vgap="25" alignment="CENTER">

            <!-- WALLET -->
            <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="0"
                  styleClass="menuCard" onMouseClicked="#goWallet">
                <FontIcon iconLiteral="fas-wallet" iconSize="36" iconColor="white"/>
                <Label text="Wallet" styleClass="menuText"/>
            </VBox>

            <!-- CREDIT CARD -->
            <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="0" GridPane.columnIndex="1"
                  styleClass="menuCard" onMouseClicked="#goCards">
                <FontIcon iconLiteral="fas-credit-card" iconSize="36" iconColor="white"/>
                <Label text="Cartes Bancaires" styleClass="menuText"/>
            </VBox>

            <!-- SERVICES -->
            <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="0"
                  styleClass="menuCard" onMouseClicked="#goServices">
                <FontIcon iconLiteral="fas-concierge-bell" iconSize="36" iconColor="white"/>
                <Label text="Services" styleClass="menuText"/>
            </VBox>

            <!-- ASSURANCES -->
            <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1"
                  styleClass="menuCard" onMouseClicked="#goAssurances">
                <FontIcon iconLiteral="fas-shield-alt" iconSize="36" iconColor="white"/>
                <Label text="Assurances" styleClass="menuText"/>
            </VBox>

            <!-- FRIENDS -->
            <VBox alignment="CENTER" spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="0"
                  styleClass="menuCard" onMouseClicked="#goFriends">
                <FontIcon iconLiteral="fas-user-friends" iconSize="36" iconColor="white"/>
                <Label text="Friends &amp; Reclamations" styleClass="menuText"/>
            </VBox>

        </GridPane>

    </VBox>
</StackPane>