<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: #f5f7fb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.credit.AfficherCredit">

    <!-- Header avec gradient -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #4f46e5, #ec4899); -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>
            <Label text="ðŸ’°" style="-fx-font-size: 28px; -fx-text-fill: white;"/>
            <Label text="SmartWallet Admin" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnRetourcredit" onAction="#retourMain" text="Retour"
                    style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand; -fx-padding: 8 20 8 20; -fx-font-size: 13px; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
        </HBox>
    </top>

    <!-- Centre -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" left="25" right="25" bottom="20"/>
            </padding>

            <!-- En-tÃªte avec titre et bouton ajouter -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <ImageView fx:id="imgLogoCredit" fitHeight="50" fitWidth="50" preserveRatio="true"/>
                <Label text="Credit Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="itafa" onAction="#itafaaction" text="âž• Add Credit"
                        style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10 20; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(two-pass-box, rgba(124,58,237,0.3), 8, 0, 0, 2);"
                        prefWidth="150"/>
            </HBox>

            <!-- TableView -->
            <TableView fx:id="tableCredits" style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 3);"
                       prefHeight="350" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="Code" />
                    <TableColumn fx:id="colNomClient" prefWidth="150" text="Client Name" />
                    <TableColumn fx:id="colMontant" prefWidth="100" text="Amount" />
                    <TableColumn fx:id="colDateCredit" prefWidth="100" text="Date" />
                    <TableColumn fx:id="colDescription" prefWidth="200" text="Description" />
                    <TableColumn fx:id="colStatut" prefWidth="100" text="Status" />
                    <TableColumn fx:id="colActions" prefWidth="150" text="Actions" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="15" left="25" right="25" top="15"/>
            </padding>
            <Label text="Â© 2026 SmartWallet - All rights reserved" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>