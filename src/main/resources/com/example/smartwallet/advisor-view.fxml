<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.smartwallet.controller.javafx.AdvisorJavaFXController"
            prefHeight="700"
            prefWidth="1000"
            style="-fx-background-color: linear-gradient(to bottom right, #8e7cc3, #f6a6c1);">

    <top>
        <VBox style="-fx-background-color: transparent; -fx-padding: 20;">
            <Label text="Conseiller Financier IA"
                   style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 40;">

            <Label text="Simulez un Achat Important"
                   style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <HBox spacing="10" alignment="CENTER">

                <Label text="Montant (TND):"
                       style="-fx-text-fill: white;"/>

                <TextField fx:id="purchaseAmountField"
                           promptText="Ex: 1800"
                           prefWidth="150"
                           style="-fx-background-radius: 12; -fx-padding: 8;"/>

                <Button fx:id="analyzeButton"
                        text="Analyser"
                        style="-fx-background-color: rgba(255,255,255,0.9);
                               -fx-text-fill: #5e4b8b;
                               -fx-font-weight: bold;
                               -fx-background-radius: 20;"/>
            </HBox>

            <Label fx:id="resultLabel"
                   style="-fx-text-fill: white; -fx-font-size: 18;"/>

            <TextArea fx:id="adviceTextArea"
                      editable="false"
                      wrapText="true"
                      prefHeight="250"
                      prefWidth="600"
                      style="-fx-control-inner-background: rgba(255,255,255,0.9);
                             -fx-background-radius: 15;
                             -fx-border-radius: 15;"/>

        </VBox>
    </center>

</BorderPane>