<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.smartwallet.controller.javafx.PlanningJavaFXController" prefHeight="700" prefWidth="1000">
    <top>
        <VBox style="-fx-background-color: #FF9800; -fx-padding: 15;">
            <Label text="Gestion des Plannings" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Formulaire d'ajout -->
            <TitledPane text="Ajouter/Modifier un Planning" animated="false" expanded="true">
                <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Nom" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Type" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="typeCombo" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Statut" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="statutCombo" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <Label text="Revenu Prevu DT" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="revenuPrevuField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Epargne Prevue DT" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                    <TextField fx:id="epargnePrevueField" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

                    <Label text="Taux Epargne" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <TextField fx:id="pourcentageEpargneField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Mois" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                    <ComboBox fx:id="moisCombo" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

                    <Label text="Annee" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <ComboBox fx:id="anneeCombo" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <!-- Boutons -->
                    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="5">
                        <Button fx:id="ajouterBtn" text="Ajouter" style="-fx-font-size: 12; -fx-padding: 8;"/>
                        <Button fx:id="modifierBtn" text="Modifier" style="-fx-font-size: 12; -fx-padding: 8;"/>
                        <Button fx:id="supprimerBtn" text="Supprimer" style="-fx-font-size: 12; -fx-padding: 8; -fx-text-fill: white; -fx-background-color: #f44336;"/>
                    </HBox>
                </GridPane>
            </TitledPane>

            <!-- Tableau des plannings -->
            <TitledPane text="Liste des Plannings" animated="false" expanded="true">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <TableView fx:id="planningsTable" prefHeight="300">
                        <columns>
                            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="120"/>
                            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                            <TableColumn fx:id="moisColumn" text="Mois" prefWidth="60"/>
                            <TableColumn fx:id="anneeColumn" text="Annee" prefWidth="80"/>
                            <TableColumn fx:id="revenuColumn" text="Revenu Prevu DT" prefWidth="130"/>
                            <TableColumn fx:id="epargneColumn" text="Epargne Prevue DT" prefWidth="130"/>
                            <TableColumn fx:id="statutColumn" text="Statut" prefWidth="100"/>
                        </columns>
                    </TableView>
                    <Label fx:id="totalPlanningsLabel" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                </VBox>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>

