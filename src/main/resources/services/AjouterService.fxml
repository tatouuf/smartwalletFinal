<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controller.service.AjouterService"
           style="-fx-background-color: #f5f7fb;">

    <VBox spacing="20" alignment="CENTER" maxWidth="1000">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #4f46e5, #ec4899); -fx-background-radius: 20; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3); -fx-padding: 20 25;">
            <ImageView fx:id="imgLogoService" fitHeight="50" fitWidth="50" preserveRatio="true"/>
            <Label text="Add a new service" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Return" onAction="#retourMain" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 8 20; -fx-cursor: hand;"/>
        </HBox>

        <!-- Contenu principal -->
        <HBox spacing="20" alignment="CENTER">
            <!-- Formulaire -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 5);" prefWidth="400">
                <Label text="Service Information" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;"/>

                <Label text="Price" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <TextField fx:id="prixservice" promptText="Ex: 150" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 8;"/>

                <Label text="Type" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <TextField fx:id="typeservice" promptText="Ex: Voiture" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 8;"/>

                <Label text="Service Category" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <ComboBox fx:id="typeserviceservice" promptText="Select" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 5;"/>

                <Label text="Status" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <ComboBox fx:id="statutservice" promptText="Select" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 5;"/>

                <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <TextField fx:id="descriptionservice" promptText="Description..." style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 8;"/>

                <Label text="Image" style="-fx-font-weight: bold; -fx-text-fill: #374151;"/>
                <HBox spacing="10">
                    <TextField fx:id="imagajt" promptText="Image URL" HBox.hgrow="ALWAYS" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 8;"/>
                    <Button text="Browse" onAction="#choisirImage" style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 15; -fx-cursor: hand;"/>
                </HBox>
            </VBox>

            <!-- WebView -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 5);" prefWidth="450">
                <Label text="Location" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;"/>
                <WebView fx:id="localisationservice" prefHeight="300" prefWidth="410"/>
                <TextField fx:id="coordTextField" promptText="Coordinates" editable="false" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d1d5db; -fx-padding: 8;"/>
            </VBox>
        </HBox>

        <!-- Boutons d'action -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="btnAjouterserrr" text="Add Service" onAction="#onButtonClicked"
                    style="-fx-background-color: #22c55e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px;"/>
            <Button text="Reset"
                    style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 12 30; -fx-cursor: hand; -fx-font-size: 14px;"/>
        </HBox>
    </VBox>
</StackPane>