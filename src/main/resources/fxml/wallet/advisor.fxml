<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="esprit.tn.souha_pi.controllers.AdvisorController" prefHeight="700" prefWidth="1000">
    <top>
        <VBox style="-fx-background-color: #6A1B9A; -fx-padding: 15;">
            <Label text="Conseiller Financier IA" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <Label text="Posez-moi une question sur vos finances" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #212121;"/>

            <HBox spacing="10" alignment="CENTER" VBox.vgrow="NEVER">
                <TextField fx:id="questionField" promptText="Ex: Puis-je acheter un PC à 3000 TND ?" HBox.hgrow="ALWAYS" prefHeight="40"/>
                <Button fx:id="askButton" text="Demander" style="-fx-background-color: #6A1B9A; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 8 15;"/>
            </HBox>

            <Separator prefWidth="200.0" />

            <Label text="Réponse de l'IA :" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #424242;"/>

            <TextArea fx:id="answerArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" style="-fx-font-size: 14; -fx-control-inner-background: #f5f5f5; -fx-border-color: #ccc; -fx-border-radius: 5;">
                <font>
                    <Font name="Monospaced Regular" size="14.0" />
                </font>
            </TextArea>
        </VBox>
    </center>
</BorderPane>