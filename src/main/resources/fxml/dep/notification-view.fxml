<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.smartwallet.controller.javafx.NotificationJavaFXController" prefHeight="600" prefWidth="800">
    <top>
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Notifications" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </VBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <ListView fx:id="notificationList" VBox.vgrow="ALWAYS"/>
            <Button text="Effacer l'historique" onAction="#clearNotifications" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;"/>
        </VBox>
    </center>
</BorderPane>
