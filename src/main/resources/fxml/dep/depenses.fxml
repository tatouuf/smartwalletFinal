<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="esprit.tn.chayma.controllers.DepensesController" prefHeight="700" prefWidth="1000">
    <top>
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 15;">
            <Label text="Gestion des Dépenses" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <!-- Formulaire d'ajout -->
            <TitledPane text="Ajouter/Modifier une Dépense" animated="false" expanded="true">
                <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Montant (DT)" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="montantField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Description" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <TextField fx:id="descriptionField" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="dateDepenseField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Catégorie" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="categorieCombo" GridPane.columnIndex="3" GridPane.rowIndex="1"/>

                    <!-- Boutons -->
                    <HBox spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="2">
                        <Button fx:id="ajouterBtn" text="Ajouter" style="-fx-font-size: 12; -fx-padding: 8;"/>
                        <Button fx:id="modifierBtn" text="Modifier" style="-fx-font-size: 12; -fx-padding: 8;"/>
                        <Button fx:id="supprimerBtn" text="Supprimer" style="-fx-font-size: 12; -fx-padding: 8; -fx-text-fill: white; -fx-background-color: #f44336;"/>
                    </HBox>
                </GridPane>
            </TitledPane>

            <!-- Filtres -->
            <TitledPane text="Filtres" animated="false" expanded="false">
                <GridPane hgap="10" vgap="10" style="-fx-padding: 15;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Catégorie" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="filterCategorieCombo" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Mois" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="filterMoisCombo" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                    <Label text="Année" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                    <ComboBox fx:id="filterAnneeCombo" GridPane.columnIndex="5" GridPane.rowIndex="0"/>
                </GridPane>
            </TitledPane>

            <!-- Tableau des dépenses -->
            <!-- Liste des dépenses -->
            <TitledPane text="Liste des Dépenses" animated="false" expanded="true">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <ListView fx:id="depensesList" prefHeight="300" />
                    <Label fx:id="totalDepensesLabel" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                </VBox>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>