<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: #f5f7fb;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.assurance.ModifierAssurance">

    <!-- Header avec gradient -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #4f46e5, #ec4899); -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 3);">
            <padding>
                <Insets top="15" right="25" bottom="15" left="25"/>
            </padding>
            <Label text="ðŸ’°" style="-fx-font-size: 28px; -fx-text-fill: white;"/>
            <Label text="SmartWallet" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="cancelassurance" onAction="#retourMain" text="Retour"
                    style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-cursor: hand; -fx-padding: 8 20 8 20; -fx-font-size: 13px;"/>
        </HBox>
    </top>

    <!-- Centre -->
    <center>
        <HBox alignment="CENTER" spacing="40">
            <padding>
                <Insets top="30" bottom="30" left="40" right="40"/>
            </padding>

            <!-- Formulaire gauche -->
            <VBox spacing="15" prefWidth="350">
                <Label text="Modify Insurance" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;"/>

                <GridPane hgap="10" vgap="10">
                    <padding><Insets top="10"/></padding>

                    <Label text="Insurance Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNomAssurance" prefWidth="220" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Insurance Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="txtTypeAssurance" prefWidth="220" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Amount:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtPrix" prefWidth="220" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Duration (months):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtDuree" prefWidth="220" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Description:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextArea fx:id="txtDescription" prefWidth="220" prefHeight="60" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Conditions:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextArea fx:id="txtConditions" prefWidth="220" prefHeight="60" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Status:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="txtStatut" prefWidth="220" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                </GridPane>

                <Button fx:id="btnEnregistrer" onAction="#enregistrerModifications" text="Save Changes"
                        style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 12 20; -fx-font-size: 14px; -fx-cursor: hand; -fx-effect: dropshadow(two-pass-box, rgba(124,58,237,0.3), 8, 0, 0, 2);"
                        prefWidth="350"/>
            </VBox>

            <!-- SÃ©parateur vertical -->
            <Region prefWidth="2" style="-fx-background-color: #e5e7eb;"/>

            <!-- Partie droite avec logo -->
            <VBox alignment="CENTER" spacing="20" prefWidth="350">
                <ImageView fx:id="imgLogoAssurance" fitHeight="200" fitWidth="200" preserveRatio="true"/>
                <Label text="Modify an Insurance" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #4f46e5;" wrapText="true"/>
                <Label text="Update the insurance information below" style="-fx-font-size: 14px; -fx-text-fill: #64748B; -fx-alignment: center;" wrapText="true"/>
            </VBox>
        </HBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: white; -fx-border-color: #e5e7eb; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="15" left="25" right="25" top="15"/>
            </padding>
            <Label text="Â© 2026 SmartWallet - All rights reserved" style="-fx-text-fill: #94a3b8; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>
</BorderPane>