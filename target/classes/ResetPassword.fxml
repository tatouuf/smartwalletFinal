<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800" prefWidth="1300" style="-fx-background-color: white;" stylesheets="@css/signIn.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ForgotResetController">

    <!-- LEFT SIDE - Decoration -->
    <left>
        <VBox alignment="CENTER" prefWidth="650" spacing="30" styleClass="left-panel">

            <Text style="-fx-font-size: 56px; -fx-font-weight: 900; -fx-fill: white; -fx-font-family: 'Poppins', 'Segoe UI';" text="SMARTWALLET" />

            <Text style="-fx-font-size: 20px; -fx-fill: rgba(255,255,255,0.9); -fx-font-family: 'Inter', 'Segoe UI';" text="Create a new secure password for your account" textAlignment="CENTER" wrappingWidth="450" />
        </VBox>
    </left>

    <!-- RIGHT SIDE - Reset Password Form -->
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 60 80; -fx-background-color: white;">

            <!-- Header -->
            <VBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 48px;" text="ðŸ”‘" />
                <Label style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #4A4A4A; -fx-letter-spacing: 2px;" text="CREATE NEW PASSWORD" />
                <Separator maxWidth="400" style="-fx-opacity: 0.3;" />
            </VBox>

            <!-- Message -->
            <VBox alignment="CENTER" spacing="10">
                <Text style="-fx-font-size: 16px; -fx-fill: #10b981; -fx-font-weight: 600;" text="Your identity has been verified." />
                <Text style="-fx-font-size: 16px; -fx-fill: #4A4A4A;" text="Please enter your new password below." />
            </VBox>

            <!-- Password Inputs -->
            <VBox prefWidth="400" spacing="20">
                <VBox spacing="8">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #4A4A4A;" text="New Password" />
                    <PasswordField fx:id="txtNewPassword" prefHeight="50" prefWidth="400" promptText="Enter new password" style="-fx-font-size: 14px;" styleClass="input-field" />
                    <Label style="-fx-font-size: 11px; -fx-text-fill: #9ca3af;" text="Minimum 6 characters" />
                </VBox>

                <VBox spacing="8">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #4A4A4A;" text="Confirm Password" />
                    <PasswordField fx:id="txtConfirmPassword" prefHeight="50" prefWidth="400" promptText="Confirm new password" style="-fx-font-size: 14px;" styleClass="input-field" />
                </VBox>
            </VBox>

            <!-- Action Button -->
            <VBox alignment="CENTER" maxWidth="400" spacing="20">
                <Button fx:id="btnResetPassword" onAction="#handleResetPassword" prefHeight="50" prefWidth="Infinity" style="-fx-font-size: 16px; -fx-font-weight: 700; -fx-background-radius: 8; -fx-cursor: hand;" styleClass="primary-button" text="âœ… Reset Password" />
            </VBox>

        </VBox>
    </center>
</BorderPane>
