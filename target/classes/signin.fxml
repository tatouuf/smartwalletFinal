<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@css/signIn.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.SignInController">

    <Pane prefHeight="600.0" prefWidth="450.0" styleClass="left-panel">
        <children>
            <Label layoutX="112.0" layoutY="266.0" styleClass="welcome-label" text="Welcome Back" />
            <Label layoutX="157.0" layoutY="311.0" styleClass="brand-label" text="SmartWallet" />
        </children>
    </Pane>

    <VBox alignment="CENTER" layoutX="450.0" prefHeight="600" prefWidth="450"
          spacing="20" styleClass="login-panel">
        <padding><Insets left="40" right="40" /></padding>

        <Label styleClass="form-title" text="Login" />

        <TextField fx:id="emailField" prefWidth="300"
                   promptText="Email Address" styleClass="input-field" />

        <StackPane prefWidth="300" prefHeight="40">
            <PasswordField fx:id="passwordField" prefWidth="300" prefHeight="40"
                           promptText="Password" styleClass="input-field" />
            <TextField fx:id="passwordVisible" prefWidth="300" prefHeight="40"
                       promptText="Password" styleClass="input-field"
                       visible="false" managed="false" />
            <Button fx:id="togglePasswordBtn" text="ðŸ‘"
                    onAction="#handleTogglePassword" styleClass="eye-button"
                    StackPane.alignment="CENTER_RIGHT" />
        </StackPane>

        <HBox alignment="CENTER_LEFT" prefWidth="300" spacing="10">
            <CheckBox fx:id="rememberCheck" styleClass="check-box" text="Remember Me" />
            <Region HBox.hgrow="ALWAYS" />
            <Hyperlink fx:id="forgotLink" onAction="#handleForgotPassword"
                       styleClass="link" text="Forgot Password?" />
        </HBox>

        <Button fx:id="btnLogin" onAction="#handleLogin" prefWidth="300"
                styleClass="primary-button" text="Login" />

        <Hyperlink fx:id="btnSignup" onAction="#handleSignup"
                   styleClass="link" text="Don't have an account? Sign Up" />
    </VBox>

</AnchorPane>